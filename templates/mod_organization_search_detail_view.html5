<script type="text/javascript">
    window.addEvent('domready',function(){

        showForm = function(){
            if (document.id('formContainer') == 'undefined')
            {
                return;
            }
            // fade in the overlay
            var overl  = new Element('div', {id: 'overlay'});
            overl.inject(document.body);
            overl.fade(0.6);
            overl.addEvent('click',function(){
                hideForm();
            });
            window.addEvent('keydown', function(event){
                if(event.key == 'esc')
                {
                    hideForm();
                }
            });
            // show Form
            var formCont =  document.id('formContainer');
            var x = (window.innerWidth / 2) - (formCont.offsetWidth / 2);
            formCont.style.top = 20  + 'px';
            formCont.style.left = x + 'px';
            var fadeForm = (function(){
                formCont.fade(1);
            }).delay(500);
        }

        hideForm = function()
        {
            if (document.id('overlay'))
            {
                document.id('overlay').fade(0);
                var destroyOverlay = (function()
                {
                    document.id('overlay').destroy();
                }).delay(1000);
            }

            if (document.id('formContainer'))
            {
                document.id('formContainer').fade(0);
            }

        }
    });
</script>
